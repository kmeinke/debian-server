{% set ssh = salt['pillar.get']('ssh', {}) %}
Port {{ ssh.get('port', 22) }}
Protocol 2

HostKey /etc/ssh/ssh_host_ed25519_key

# Algorithms
KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org
Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com
MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com
HostKeyAlgorithms ssh-ed25519

# Authentication
PermitRootLogin {{ ssh.get('permit_root_login', 'no') }}
PubkeyAuthentication yes
PasswordAuthentication {{ ssh.get('password_auth', 'no') }}
PermitEmptyPasswords no
ChallengeResponseAuthentication no
UsePAM yes

# Security
LoginGraceTime 30
MaxAuthTries {{ ssh.get('max_auth_tries', 3) }}
MaxSessions {{ ssh.get('max_sessions', 3) }}
DisableForwarding yes

{% if ssh.get('allowed_users') %}
AllowUsers {{ ssh.allowed_users | join(' ') }}
{% endif %}

# Logging
SyslogFacility AUTH
LogLevel VERBOSE

# Keep alive
ClientAliveInterval 300
ClientAliveCountMax 2

# Subsystems
Subsystem sftp /usr/lib/openssh/sftp-server
